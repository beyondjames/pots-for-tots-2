{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .collection-hero__description--delivery-date p {
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .collection-hero--with-image .collection-hero__inner {
      padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 2rem);
    }
  }
{%- endstyle -%}

{%- capture weekday_date_month -%}
  {%- assign today = "now" | date: "%s" -%}
  {%- assign weekday = "now" | date: "%A" -%}
  {%- assign hour = "now" | date: "%H" -%}
  {%- assign hour_cutoff = "24" -%}

  {%- if weekday == "Tuesday" -%}
    {%- assign days_later = 9 | times: 86400 -%}
  {%- elsif weekday == "Wednesday" -%}
    {%- assign days_later = 8 | times: 86400 -%}
    {%- elsif weekday == "Thursday" -%}
    {%- assign days_later = 7 | times: 86400 -%}
    {%- elsif weekday == "Friday" -%}
    {%- assign days_later = 6 | times: 86400 -%}
  {%- elsif weekday == "Saturday" -%}
    {%- assign days_later = 5 | times: 86400 -%}
  {%- elsif weekday == "Sunday" -%}
    {%- assign days_later = 4 | times: 86400 -%}
  {%- else -%}
    {%- if hour_cutoff > hour -%}
      {%- assign days_later = 3 | times: 86400 -%}
    {%- else -%}
      {%- assign days_later = 10 | times: 86400 -%}
    {%- endif -%}
  {%- endif -%}

  {{ today | plus: days_later | date: "%A" }}
  {{ today | plus: days_later | date: "%d %B" }}
{%- endcapture -%}

<div class="collection-hero{% if section.settings.show_collection_image and collection.image %} collection-hero--with-image{% endif %} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="collection-hero__text-wrapper">
      <h1 class="collection-hero__title">
        {%- if section.settings.collection_title != blank -%}
          {{- section.settings.collection_title | escape -}}
        {%- else -%}
          <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
          {{- collection.title | escape -}}
        {%- endif -%}
      </h1>

      {%- if section.settings.collection_text != blank -%}
        <div class="collection-hero__description rte">
          {{- section.settings.collection_text -}}

          <div class="collection-hero__description--delivery-date">
            <p><strong>Our next delivery date will be:</strong></p>
            {% if section.settings.delivery_date_message != "" %}
              {{- section.settings.delivery_date_message -}}
            {% else %}
              {{ weekday_date_month }}
            {% endif %}
          </div>
        </div>
      {%- else -%}
        {%- if section.settings.show_collection_description -%}
          <div class="collection-hero__description rte">
            {{- collection.description -}}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>

    {%- if section.settings.show_collection_image and collection.image -%}
      <div class="collection-hero__image-container media gradient">
        <img
          srcset="
            {%- if collection.image.width >= 165 -%}{{ collection.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if collection.image.width >= 360 -%}{{ collection.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if collection.image.width >= 535 -%}{{ collection.image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if collection.image.width >= 750 -%}{{ collection.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if collection.image.width >= 1070 -%}{{ collection.image | image_url: width: 1070 }} 1070w,{%- endif -%}
            {%- if collection.image.width >= 1500 -%}{{ collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ collection.image | image_url }} {{ collection.image.width }}w
          "
          src="{{ collection.image | image_url: width: 750 }}"
          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
          alt=""
          width="{{ collection.image.width }}"
          height="{{ collection.image.height }}"
        >
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection banner (BB)",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.show_collection_image.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "collection_title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "collection_text",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "delivery_date_message",
      "label": "Delivery Date Message",
      "info": "If left blank, the next delivery date will be calculated based on the current day of the week."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
