{% assign cart_disabled = disabled %}
{% assign cart_message = cart_error_message %}

{% comment %} Cart error message {% endcomment %}
{% if cart_message != '' %}
  <small class="tax-note caption-large rte">{{ cart_message }}</small>
{% endif %}

<div class="cart__ctas" {{ block.shopify_attributes }}>
  <noscript>
    <button type="submit" class="cart__update-button button button--secondary" form="cart">
      {{ 'sections.cart.update' | t }}
    </button>
  </noscript>

  <button type="submit" class="cart__checkout-button button" name="checkout"{% if cart == empty or cart_disabled or datepicker_active %} disabled{% endif %} form="cart">
  {% if cart == empty or cart_disabled %}Incomplete Cart{% else %}{{ 'sections.cart.checkout' | t }}{% endif %}
  </button>
</div>

<div class="cart__small-print">
  <p><strong>Please don't order our meals if your child has a serious allergy.</strong> Due to the nature of our production facility and our supply chain there is a possibility our food may contain any of the 14 allergens.</p>
</div>

{% comment %} {%- if additional_checkout_buttons -%}
  <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
    {{ content_for_additional_checkout_buttons }}
  </div>
{%- endif -%} {% endcomment %}